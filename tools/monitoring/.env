# Example: Environment variable configuration

# Environment
ENV=monitoring

# Logging
LOG_LEVEL=INFO

# Credentials
AUTH_USER=test-admin
AUTH_PASS=test-secure-password
JWT_SECRET_KEY=test-secret-key-must-be-at-least-32-chars
X_API_KEY=test-api-key

RUSTFS_ACCESS_KEY=rustfsadmin
RUSTFS_SECRET_KEY=rustfsadmin

# Ports
PORT_GATEWAY_HTTPS=443
PORT_S3=9000
PORT_S3_MGMT=9001
PORT_DATABASE=8001
PORT_VICTORIALOGS=9428

# Public endpoint used for presigned URL generation (recommended)
# Set to externally reachable scheme://host:port
S3_PRESIGN_ENDPOINT=http://localhost:9000

# Monitoring ports
PORT_CADVISOR=8080
PORT_PROMETHEUS=9090
PORT_GRAFANA=3000

# Prometheus retention
PROMETHEUS_RETENTION=7d

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
