{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://esb.example/schema/dind-bundler-manifest.json",
  "$comment": "Where: docs/plans/dind-bundler-manifest.schema.json | What: JSON Schema for manifest-driven DinD bundle | Why: Enforce deterministic, template-derived bundle contents.",
  "title": "ESB DinD Bundle Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "generated_at",
    "template",
    "build",
    "images"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": ["1.0"],
      "description": "Manifest schema version."
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 UTC timestamp for manifest generation."
    },
    "template": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "sha256", "parameters"],
      "properties": {
        "path": {
          "type": "string",
          "minLength": 1,
          "description": "Template path used for build (relative or absolute)."
        },
        "sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of the template file contents."
        },
        "parameters": {
          "type": "object",
          "description": "Resolved template parameters used for build.",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "build": {
      "type": "object",
      "additionalProperties": false,
      "required": ["project", "env", "mode", "image_prefix", "image_tag", "git"],
      "properties": {
        "project": {
          "type": "string",
          "minLength": 1,
          "description": "Compose project name used for build."
        },
        "env": {
          "type": "string",
          "minLength": 1,
          "description": "ESB environment name."
        },
        "mode": {
          "type": "string",
          "enum": ["docker", "containerd", "firecracker"],
          "description": "Build/runtime mode."
        },
        "image_prefix": {
          "type": "string",
          "minLength": 1,
          "description": "Image name prefix used by ESB."
        },
        "image_tag": {
          "type": "string",
          "minLength": 1,
          "description": "Image tag used for ESB images."
        },
        "git": {
          "type": "object",
          "additionalProperties": false,
          "required": ["commit", "dirty"],
          "properties": {
            "commit": {
              "type": "string",
              "pattern": "^[a-f0-9]{7,40}$",
              "description": "Git commit SHA at build time."
            },
            "dirty": {
              "type": "boolean",
              "description": "True if the working tree had uncommitted changes."
            }
          }
        }
      }
    },
    "images": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "digest", "kind", "source", "platform"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Full image reference (tag or digest)."
          },
          "digest": {
            "type": "string",
            "pattern": "^sha256:[a-f0-9]{64}$",
            "description": "Content digest or image ID. Used for verification."
          },
          "kind": {
            "type": "string",
            "enum": ["function", "service", "base", "external", "other"],
            "description": "Image category."
          },
          "source": {
            "type": "string",
            "enum": ["template", "internal", "external", "generated", "other"],
            "description": "Origin of the image."
          },
          "labels": {
            "type": "object",
            "description": "Optional image labels for traceability.",
            "additionalProperties": {
              "type": "string"
            }
          },
          "platform": {
            "type": "string",
            "minLength": 3,
            "pattern": "^[a-z0-9]+/[a-z0-9]+([a-z0-9.-]+)?$",
            "description": "Target platform (e.g., linux/amd64)."
          }
        }
      }
    }
  }
}
